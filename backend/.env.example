# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=freetun_db
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_REFRESH_SECRET=your_super_secret_refresh_key_change_this_in_production
JWT_EXPIRES_IN=1d
JWT_REFRESH_EXPIRES_IN=7d

# Email Configuration (Free: Use Gmail SMTP or SendGrid free tier)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_specific_password
EMAIL_FROM=noreply@freetun.tn

# SMS Configuration (Optional - Tunisian SMS providers)
SMS_API_KEY=your_sms_api_key
SMS_SENDER_ID=FreeTun

# Payment Gateway Configuration
# Flouci API (Tunisia)
FLOUCI_APP_TOKEN=your_flouci_app_token
FLOUCI_APP_SECRET=your_flouci_app_secret
FLOUCI_API_URL=https://developers.flouci.com/api

# D17 API (Tunisia)
D17_API_KEY=your_d17_api_key
D17_API_SECRET=your_d17_api_secret
D17_API_URL=https://api.d17.tn

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads

# CORS Configuration
FRONTEND_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Commission Rates (percentage)
FREELANCER_COMMISSION=5
CLIENT_COMMISSION=2
